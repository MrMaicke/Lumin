@page

<div>
    <h1>Tela de Login</h1>

    @* Formulário de cadastro de equipes *@
    <form method="POST" asp-action="CadastrarLogin" asp-controller="Login">
        <div class="form-control">
            <label for="nome">Nome do login</label>
            <input type="text" name="Nome">
        </div>

        <div class="form-control">
            <label for="email">Email do login</label>
            <input type="Email" name="email">
        </div>

        <div class="form-control">
            <label for="senha">Senha do login</label>
            <input type="Password" name="senha">
        </div>

        <div class="form-control">
            <select class="form-select" name="IdEquipe">
                <option>Selecione uma equipe</option>

                @foreach(Equipe equipe in ViewBag.ListaEquipes)
                {
                    <option value="@equipe.Id">@equipe.Nome</option>
                }
            </select>
        </div>

        <button class="btn btn-primary" type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </thead>

        <tbody>
            @foreach(Login login in ViewBag.ListaLogins)
            {
                <tr>
                    <td>@login.Id</td>
                    <td>@login.Nome</td>
                    <td>@login.Email</td>
                    @* Forma de conseguir acessar os dados da equipe relacionada com o Login *@
                    <td>@login.IdEquipeNavigation?.Nome</td>

                    <td>
                        @*<a class="btn btn-primary" href="/Login/Atualizar/@login.Id">Atualizar</a>*@
                        @* Passando para a função de excluir a referencia do id do jogador *@
                        <a class="btn btn-danger" asp-action="ExcluirLogin" asp-controller="Login" asp-route-id="@Login.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
