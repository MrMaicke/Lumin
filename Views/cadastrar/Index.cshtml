@{
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}
 
<section class="gradient-custom-2 d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card card-registration card-registration-2 w-75"
         style="border-radius: 15px; overflow: hidden; max-width: 850px;">
 
        <div class="row g-0">
 
            <!-- TÍTULO CENTRALIZADO ACIMA DO FORM -->
            <div class="col-12 text-center py-5" style="background: transparent;">
                <h3 class="fw-bold mb-0" style="color: #a1c4fd; font-size: 2.8rem;">
                    Cadastre-se
                </h3>
            </div>
 
            <!-- FORMULÁRIO -->
            <form method="post" asp-action="/Cadastrar/Login"
                  class="col-12 bg-indigo text-white d-flex justify-content-center">
 
                <div class="p-5" style="width: 100%; max-width: 450px;">
 
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label" for="nome">Nome</label>
                            <input type="text" id="nome" name="Nome" class="form-control form-control-lg" />
                        </div>
 
                        <div class="col-md-6 mb-4">
                            <label class="form-label" for="usuario">Sobre Nome</label>
                            <input type="text" id="usuario" name="Telefone" class="form-control form-control-lg" />
                        </div>
                    </div>
 
                    <div class="mb-4">
                        <label class="form-label" for="email">E-mail</label>
                        <input type="email" id="email" name="Email" class="form-control form-control-lg" />
                    </div>
 
                    <div class="mb-4">
                        <label class="form-label" for="senha">Senha</label>
                        <input type="password" id="senha" name="Senha" class="form-control form-control-lg" />
                    </div>
 
                    <div class="mb-4">
                        <label class="form-label" for="confsenha">Confirmar Senha</label>
                        <input type="password" id="confsenha" name="ConfSenha" class="form-control form-control-lg" />
                    </div>
 
                    <a href="Feed"
                    <button type="submit" class="btn btn-primary w-100 mb-3">Registrar</button></a>
 
                    <button onclick="window.location.href='login'" type="button"
                            class="btn btn-light w-100">
                        Já tenho uma conta
                    </button>
 
                </div>
            </form>
 
        </div>
    </div>
</section>
 
 