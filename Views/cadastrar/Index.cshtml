@page

<section class="gradient-custom-2 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px; overflow: hidden;">
                    <div class="card-body p-0">

                        <div class="row g-0">

                            <!-- Lado esquerdo -->
                            <div class="col-12">
                                <div class="p-4 p-md-5">

                                    <h3 class="fw-normal mb-4" style="color: #a1c4fd;">
                                        Cadastre-se
                                    </h3>

                                    <!-- Nome e usuário -->
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline" data-mdb-input-init>
                                                <label class="form-label" for="nome">Nome</label>
                                                <input type="text" id="nome" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline" data-mdb-input-init>
                                                <label class="form-label" for="usuario">Nome de usuário</label>
                                                <input type="text" id="usuario" class="form-control" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="form-outline mb-4" data-mdb-input-init>
                                        <label class="form-label" for="email">E-mail</label>
                                        <input type="email" id="email" class="form-control" />
                                    </div>

                                    <!-- Senha -->
                                    <div class="form-outline mb-4" data-mdb-input-init>
                                        <label class="form-label" for="senha">Senha</label>
                                        <input type="password" id="senha" class="form-control" />
                                    </div>

                                    <!-- Termos -->
                                    <div class="form-check d-flex justify-content-center mb-4">
                                        <input class="form-check-input me-2" type="checkbox" id="termos" checked />
                                        <label class="form-check-label" for="termos">
                                            Termos e condições
                                        </label>
                                    </div>

                                    <!-- Botão -->
                                    <button type="submit" class="btn btn-primary w-100 mb-3">
                                        Registrar
                                    </button>

                                </div>
                            </div>

                        </div> <!-- row -->
                    </div> <!-- card-body -->
                </div> <!-- card -->
            </div>
        </div>
    </div>
</section>