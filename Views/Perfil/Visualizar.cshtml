@model Lumin.Models.Perfil

@{
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}

<div class="container mt-4">
    <div class="row">

        <!-- LADO ESQUERDO: Perfil e amigos -->
        <div class="col-lg-4">
            <div class="card mb-3 text-center">
                <div class="card-body">
                    <img src="@Model.Avatar" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                    <h4>@Model.Nome</h4>
                    <div class="text-muted">@Model.Profissao</div>
                    <div>@Model.Cidade, @Model.Estado</div>
                    <div>@Model.Empresa</div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header"><h5>Amigos</h5></div>
                <div class="card-body">
                    @foreach(var amigo in Model.Amigos)
                    {
                        <div class="d-flex align-items-center mb-2">
                            <img src="@amigo.Avatar" width="50" height="50" class="rounded-circle me-2" />
                            <span>@amigo.Nome</span>
                        </div>
                    }
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header"><h5>Pedidos de amizade</h5></div>
                <div class="card-body">
                    @foreach(var pedido in Model.PedidosAmizade)
                    {
                        <div class="d-flex align-items-center mb-2">
                            <img src="@pedido.Avatar" width="50" height="50" class="rounded-circle me-2" />
                            <span>@pedido.Nome</span>
                            <button class="btn btn-sm btn-primary ms-auto">Aceitar</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- CENTRO: Posts -->
        <div class="col-lg-8">
            @foreach(var post in Model.Posts)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex mb-2">
                            <img src="@Model.Avatar" width="50" height="50" class="rounded-circle me-2" />
                            <div>
                                <strong>@post.Autor</strong><br />
                                <small class="text-muted">@post.Data.ToString("g")</small>
                            </div>
                        </div>
                        <p>@post.Conteudo</p>
                        @if(!string.IsNullOrEmpty(post.Imagem))
                        {
                            <img src="@post.Imagem" class="img-fluid rounded mb-2" />
                        }
                        <button class="btn btn-sm btn-danger">Like</button>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
