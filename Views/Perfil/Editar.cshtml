@model Lumin.Models.EditarUsuario

@{
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
    ViewData["Title"] = "Editar Perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card p-4">
                <h3 class="mb-4">Editar Perfil</h3>
                <form asp-action="Editar" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Nome</label>
                        <input type="text" class="form-control" asp-for="Nome">
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Cidade</label>
                        <input type="text" class="form-control" asp-for="Cidade">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Estado</label>
                        <input type="text" class="form-control" asp-for="Estado">
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Avatar (URL)</label>
                        <input type="text" class="form-control" asp-for="Avatar">
                    </div>

                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    <a class="btn btn-secondary" href="/Perfil">Cancelar</a>
                </form>
            </div>

        </div>
    </div>
</div>
