                    <hr class="my-2">

                    <div class="media">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" width="56" height="56"
                            class="rounded-circle mr-2" alt="John Smit">
                        <div class="media-body">
                            <p class="my-1"><strong>John Smit</strong></p>
                            <a class="btn btn-sm btn-outline-primary" href="">Unfollow</a>
                        </div>
                    </div>

                    <hr class="my-2">

                    <div class="media">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" width="56" height="56"
                            class="rounded-circle mr-2" alt="Marie Salter">
                        <div class="media-body">
                            <p class="my-1"><strong>Marie Salter</strong></p>
                            <a class="btn btn-sm btn-outline-primary" href="">Unfollow</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

<div class="container mt-4">
    <div class="row">

        <!-- COLUNA ESQUERDA (Amigos + Perfil + About) -->
        <div class="col-12 col-lg-4 col-xl-3">

            <!-- AMIGOS -->
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title mb-3">Amigos</h4>

                    <div class="friend-item d-flex align-items-center mb-3">
                        <img src="https://bootdey.com/img/Content/avatar/avatar5.png" width="55" class="rounded-circle me-2" />
                        <div>
                            <h5 class="m-0">Carlos</h5>
                            <button class="btn btn-primary btn-sm mt-1">Message</button>
                        </div>
                    </div>

                    <div class="friend-item d-flex align-items-center mb-3">
                        <img src="https://bootdey.com/img/Content/avatar/avatar4.png" width="55" class="rounded-circle me-2" />
                        <div>
                            <h5 class="m-0">Rogerio</h5>
                            <button class="btn btn-primary btn-sm mt-1">Message</button>
                        </div>
                    </div>

                    <div class="friend-item d-flex align-items-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar2.png" width="55" class="rounded-circle me-2" />
                        <div>
                            <h5 class="m-0">Cleiton</h5>
                            <button class="btn btn-primary btn-sm mt-1">Message</button>
                        </div>
                    </div>

                </div>
            </div>

            <!-- PERFIL -->
            <div class="card mb-3">
                <div class="card-body text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="img-fluid rounded-circle mb-2" width="128" />
                    <h4 class="mb-0">Kathy Davis</h4>
                    <div class="text-muted mb-2">Front-end Developer</div>

                    <button class="btn btn-primary btn-sm">Follow</button>
                    <button class="btn btn-outline-primary btn-sm">Message</button>
                </div>
            </div>

            <!-- ABOUT -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">About</h5>
                </div>
                <div class="card-body">

                    <p><b>Lives in</b> San Francisco</p>
                    <p><b>Works at</b> GitHub</p>
                    <p><b>From</b> Boston</p>

                </div>
            </div>

        </div>

 
<div class="container mt-4">

    <!-- Formulário para criar postagem -->
    <form method="post" action="/Feed/Create" class="mb-4">
        <div class="card p-3 shadow-sm">
            <textarea name="Texto" class="form-control" rows="3" placeholder="Escreva algo..."></textarea>

            <button type="submit" class="btn btn-primary mt-2">
                Postar
            </button>
        </div>
    </form>

    <h3>Postagens recentes</h3>

    <!-- Lista de posts -->
    @foreach (var post in Model)
    {
        <div class="card mt-3 shadow-sm">
            <div class="card-body">
                
                <small class="text-muted">@Postagem.Descricao.ToString("dd/MM/yyyy HH:mm")</small>
            </div>
        </div>
    }
</div>

        <!-- COLUNA DO MEIO - FEED -->
        <div class="col-12 col-lg-8 col-xl-6">

            <h2 class="mb-4 text-center">Feed de Postagens</h2>

            @foreach (var postagem in Model)
            {
                <div class="card mb-4 shadow-sm">

                    <div class="card-body">

                        <h5 class="card-title">@Postagem.Usuario?.Nome</h5>
                        <p class="card-text">@Postagem.Descricao</p>

                        <div class="d-flex align-items-center">
                            <button class="btn btn-light me-2">❤️ Curtir</button>
                            <span>@Postagem.Likes curtidas</span>
                        </div>

                    </div>

                </div>
            }

        </div>

    </div>
</div>